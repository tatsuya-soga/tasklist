<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <li class="dropdown-item"><%= link_to 'Logout', logout_path, method: :delete %></li>
<% else %>
  <h1>Welcome to the Tasklist</h1>
  <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
  <li class="nav-item"><%= link_to 'Login', login_path, class: 'nav-link' %></li>
<% end %>

<h1>タスク一覧</h1>

<ul>
    <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %> :　<%= task.status %> &gt; <%= task.content %> &gt; <%= task.user_id %></li>
    <% end %>
</ul>

<%= link_to '作成ページの投稿', new_task_path %>